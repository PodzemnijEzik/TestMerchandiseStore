<Window x:Class="WpfApp1.WinBasket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WinBasket" Height="400" Width="500">
    <Grid Background="LightGray">

        <ListView x:Name="BasketListView" Grid.Row="0" Margin="0 30 0 0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                    <GridViewColumn Header="Изображение" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Image}" Width="140" Height="60" Stretch="Uniform"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Удалить выбранное" Padding="10,5" Margin="5" Click="DeleteButton_Click" Height="40" VerticalAlignment="Bottom"/>
            <Button Content="Оформить заказ" Padding="10,5" Margin="5" Height="40" VerticalAlignment="Bottom"/>
        </StackPanel>
        <Label x:Name ="Count"  Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="30" Width="206" FontWeight="Bold"/>
        <Label x:Name ="Price" Content="Label" HorizontalAlignment="Right" Height="30" VerticalAlignment="Top" Width="192" FontWeight="Bold"/>
    </Grid>
</Window>
